{
    "formTitle": "企业职工身体健康状况统计",
    "fields": [
        {
            "label": "姓名",
            "fieldName": "fullName",
            "type": "input",
            "required": true,
            "placeholder": "请输入员工姓名"
        },
        {
            "label": "年龄",
            "fieldName": "age",
            "type": "number",
            "required": true,
            "placeholder": "请输入年龄"
        },
        {
            "label": "性别",
            "fieldName": "gender",
            "type": "select",
            "required": true,
            "options": [
                {
                    "label": "男",
                    "value": "male"
                },
                {
                    "label": "女",
                    "value": "female"
                }
            ]
        },
        {
            "label": "工作单位",
            "fieldName": "workUnit",
            "type": "input",
            "required": true,
            "placeholder": "请输入所属部门或工作单位"
        },
        {
            "label": "手机号",
            "fieldName": "phoneNumber",
            "type": "input",
            "required": true,
            "placeholder": "请输入联系电话",
            "validation": "^1[3-9]\\d{9}$"
        },
        {
            "label": "是否患有慢性病",
            "fieldName": "hasChronicDisease",
            "type": "radio",
            "required": true,
            "options": [
                {
                    "label": "是",
                    "value": true
                },
                {
                    "label": "否",
                    "value": false
                }
            ]
        },
        {
            "label": "慢性病详情",
            "fieldName": "chronicDiseaseDetails",
            "type": "textarea",
            "required": false,
            "placeholder": "如有慢性病，请详细填写疾病名称"
        },
        {
            "label": "血压高压值 (收缩压)",
            "fieldName": "systolicBloodPressure",
            "type": "number",
            "required": false,
            "placeholder": "单位: mmHg"
        },
        {
            "label": "血压低压值 (舒张压)",
            "fieldName": "diastolicBloodPressure",
            "type": "number",
            "required": false,
            "placeholder": "单位: mmHg"
        },
        {
            "label": "血糖值",
            "fieldName": "bloodSugar",
            "type": "number",
            "required": false,
            "placeholder": "单位: mmol/L"
        },
        {
            "label": "最近一次体检医生建议",
            "fieldName": "lastCheckupAdvice",
            "type": "textarea",
            "required": false,
            "placeholder": "请输入医生给出的健康建议"
        },
        {
            "label": "是否需要复查",
            "fieldName": "needsReexamination",
            "type": "radio",
            "required": true,
            "options": [
                {
                    "label": "是",
                    "value": true
                },
                {
                    "label": "否",
                    "value": false
                }
            ]
        },
        {
            "label": "是否需要用药",
            "fieldName": "needsMedication",
            "type": "radio",
            "required": true,
            "options": [
                {
                    "label": "是",
                    "value": true
                },
                {
                    "label": "否",
                    "value": false
                }
            ]
        },
        {
            "label": "是否需要观察",
            "fieldName": "needsObservation",
            "type": "radio",
            "required": true,
            "options": [
                {
                    "label": "是",
                    "value": true
                },
                {
                    "label": "否",
                    "value": false
                }
            ]
        }
    ]
}